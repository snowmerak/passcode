{
  "name": "@snowmerak/passcode",
  "version": "1.0.0",
  "description": "Challenge-Response based One-Time Password (OTP) authentication library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "otp",
    "authentication",
    "2fa",
    "challenge-response",
    "sha3",
    "kmac",
    "blake3",
    "cryptography"
  ],
  "author": "snowmerak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowmerak/passcode.git",
    "directory": "ports/typescript"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.3",
    "blake3": "^2.1.7"
  }
